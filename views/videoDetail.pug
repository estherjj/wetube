extends layouts/main


block content 
    .video__player 
        video(src=`/${vvideo.fileUrl}`, controls=true)
    .video__info 
        a(href=routes.editVideo(vvideo.id)) Edit video
        h3.video__title=vvideo.title
        span.video__views=vvideo.views
        p.video__description=vvideo.description
    .video__comments 
        if vvideo.comments.length === 1
            span.video__comment-number 1 comment 
        else 
            span.video__comment-number #{vvideo.comments.length} comments