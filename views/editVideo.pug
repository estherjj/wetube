extends layouts/main

block content 
    .form-container 
        form(action=routes.editVideo(vvideo.id), method="POST")
            input(type="text", placeholder="Title", name="title", value=vvideo.title)
            textarea(name="description", placeholder="Description")=vvideo.description
            input(type="submit", value="Update Video")
        a.form-container__link(href=routes.deleteVideo(vvideo.id)) Delete Video